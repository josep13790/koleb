<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pac-Man</title>
    <style>
        /* CSS untuk tampilan Pac-Man */
        #pacman {
            width: 50px;
            height: 50px;
            background-color: yellow;
            border-radius: 50%;
            position: relative;
        }
    </style>
</head>
<body>
    <div id="pacman"></div>

    <script>
        const pacman = document.getElementById('pacman');
        let direction = 'right';
        let xPosition = 0;
        let animation;

        function movePacman() {
            if (direction === 'right') {
                xPosition += 5;
                pacman.style.transform = 'scaleX(1)';
                if (xPosition >= window.innerWidth - 50) {
                    direction = 'left';
                }
            } else {
                xPosition -= 5;
                pacman.style.transform = 'scaleX(-1)';
                if (xPosition <= 0) {
                    direction = 'right';
                }
            }

            pacman.style.left = xPosition + 'px';
            animation = requestAnimationFrame(movePacman);
        }

        movePacman();

        // Untuk menghentikan permainan, Anda dapat menghentikan animasi dengan:
        // cancelAnimationFrame(animation);
    </script>
</body>
</html>
